@model IEnumerable<string>
@{
    ViewBag.Title = "ShowAllRolesOfTheUser";
}

<h2>ShowAllRolesOfTheUser</h2>
<div>
    @ViewBag.UserName
</div>

<table class="table">
    <tr>
        <th>
            RoleName
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item
            </td>
            <td>
                @Html.ActionLink("Remove role", "RemoveRole", new { userId = @ViewBag.UserId }) 
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Back to Management Page", "Index")
</p>