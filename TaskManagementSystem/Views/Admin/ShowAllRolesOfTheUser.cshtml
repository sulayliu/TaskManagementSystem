@model IEnumerable<string>
@{
    ViewBag.Title = "ShowAllRolesOfTheUser";
}

<h3>All roles of the user:</h3>

<table class="table">
    <tr>
        <th>
            @ViewBag.UserName
        </th>
    </tr>
</table>

<table class="table" >
    <tr>
        <th>
            RoleName
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item
            </td>
            <td>
                @if (item != "Admin")
                {
                    @Html.ActionLink("Remove role", "RemoveRole", new { userId = @ViewBag.UserId, roleName = item })
                }

            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Back to All Users", "ShowAllUsers")
</p>
