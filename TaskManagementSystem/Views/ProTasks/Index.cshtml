@model IEnumerable<TaskManagementSystem.Models.ProTask>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.Label("Project name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompletedPercentage)
        </th>
        <th>
            @Html.DisplayNameFor(model =>model.Deadline)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.Priority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>@Html.DisplayNameFor(model=>model.Comment)</th>
        <th></th>        
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Project.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Content)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreatedTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CompletedPercentage)
    </td>
    <td>
        @Html.DisplayFor(modelItem=>item.Deadline)
    </td>
    <td>
        @Html.DisplayFor(modelItem=>item.Priority)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem=>item.Comment)
    </td>
    <td>
        @Html.ActionLink("Edit", "EditDeveloperTask", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "DeleteDeveloperTask", new { id = item.Id })
    </td>    
        @if (item.CompletedPercentage == 100)
        {
            <td class="btn btn-warning">
                @Html.ActionLink("Comment", "Comments", "ProTasks", new { id = item.Id }, null)
            </td>
        }    
</tr>
}

</table>

<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>